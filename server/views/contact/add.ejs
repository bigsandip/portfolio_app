<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/header.ejs %>
  </head>
<br><br>
  <body id="page-top">
    <!--Navigation -->
    <% include ../partials/navbar.ejs %>
<!---service Grid Section-->
<section class="portfolio" id="portfolio">
   <div class="container">
     <h2 class="justify-content-center text-center text-uppercase text-secondary text-white  mb-0">
       Add User
     </h2>
     <hr class="star-dark mb-5" />
     <div class="row justify-content-center">
      <div class="col-md-offset-3 col-md-5">

      <form class="form" method="post">
        <div class="from-group">
          <!-- contact name fields -->
          <label for="contactNameTextField">Contact Name:*</label>
          <input
            type="text"
            class="form-control"
            id="contactNameTextField"
            placeholder="Enter the Contact Name:"
            name="contactName"
            required
          />
        </div>
          <!-- contact number fields -->
        <div class="from-group">
          <label for="contactNumberTextField">Contact Number:*</label>
          <input
            type="text"
            class="form-control"
            id="contactNumberTextField"
            placeholder="Enter the Contact Number:"
            name="contactNumber"
            required
          />
        </div>
          <!-- email  fields -->
        <div class="from-group">
          <label for="emailAddressTextField">Email Address:*</label>
          <input
            type="text"
            class="form-control"
            id="emailAddressTextField"
            placeholder="Enter the Email Address:"
            name="emailAddress"
            required
          />
        </div>
          <br>
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contacts-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
      
  </div>
 </section>

     <!--Footer-->
     <% include ../partials/footer.ejs %>
   </body>
 </html>
 





