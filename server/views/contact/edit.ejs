
<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/header.ejs %>
  </head>
<br><br>
  <body id="page-top">
    <!--Navigation -->
    <% include ../partials/navbar.ejs %>
<!---service Grid Section-->
<section class="portfolio" id="portfolio">
   <div class="container">
     <h2 class="justify-content-center text-center text-uppercase text-secondary text-white  mb-0">
       Edit User
     </h2>
     <hr class="star-dark mb-5" />
     <div class="row justify-content-center">
      <div class="col-md-offset-3 col-md-4">

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Contact Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Contact Name:"
            name="contactName"
            value="<%= contact.contactName %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Contact Number</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter the Contact Number:"
            name="contactNumber"
            value="<%= contact.contactNumber %>"
            required
          />
        </div>

        <div class="from-group">
          <label for="publishedTextField">Email Address</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter the Email Address:"
            name="emailAddress"
            value="<%= contact.emailAddress %>"
            required
          />
        </div>
            <br>
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contacts-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>

      </form>
      </div>
      
  </div>
 </section>

     <!--Footer-->
     <% include ../partials/footer.ejs %>
   </body>
 </html>
 



